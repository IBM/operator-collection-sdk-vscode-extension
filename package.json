{
  "name": "operator-collection-sdk",
  "displayName": "Operator Collection SDK",
  "publisher": "ibm",
  "icon": "resources/icons/broker-logo.png",
  "description": "IBM Operator Collection SDK VS Code extension for Operator Collection development",
  "version": "0.0.2",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "operator-collection-sdk.createOperator",
        "title": "Create Operator",
        "category": "OC-SDK",
        "icon": "$(debug-start)"
      },
      {
        "command": "operator-collection-sdk.deleteOperator",
        "title": "Delete Operator",
        "category": "OC-SDK",
        "icon": "$(debug-stop)"
      },
      {
        "command": "operator-collection-sdk.redeployCollection",
        "title": "Redeploy Collection",
        "category": "OC-SDK",
        "icon": "$(debug-restart-frame)"
      },
      {
        "command": "operator-collection-sdk.redeployOperator",
        "title": "Redeploy Operator",
        "category": "OC-SDK",
        "when": "viewItem == operator-container",
        "icon": "$(debug-restart)"
      },
      {
        "command": "operator-collection-sdk.downloadLogs",
        "title": "Download Logs",
        "category": "OC-SDK",
        "icon": "$(file)"
      },
      {
        "command": "operator-collection-sdk.downloadVerboseLogs",
        "title": "Download Verbose Logs",
        "category": "OC-SDK",
        "icon": "$(file-binary)"
      },
      {
        "command": "operator-collection-sdk.openEditLink",
        "title": "Edit",
        "category": "OC-SDK",
        "icon": "$(settings-edit)"
      },
      {
        "command": "operator-collection-sdk.openAddLink",
        "title": "Add",
        "category": "OC-SDK",
        "icon": "$(add)"
      },
      {
        "command": "operator-collection-sdk.openLink",
        "title": "Open Link",
        "category": "OC-SDK",
        "icon": "$(link-external)"
      },
      {
        "command": "operator-collection-sdk.refresh",
        "title": "Refresh",
        "category": "OC-SDK",
        "icon": "$(extensions-refresh)"
      }
    ],
    "views": {
      "operator-collection-sdk": [
        {
          "id": "operator-collection-sdk.operators",
          "name": "Operators"
        },
        {
          "id": "operator-collection-sdk.resources",
          "name": "OpenShift Resources"
        },
        {
          "id": "operator-collection-sdk.links",
          "name": "Links"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "operator-collection-sdk",
          "title": "Operator Collection SDK",
          "icon": "resources/icons/broker-logo.png"
        }
      ]
    },
    "menus": {
      "view/item/context": [
        {
          "command": "operator-collection-sdk.createOperator",
          "when": "view == operator-collection-sdk.operators && viewItem == operator",
          "group": "inline"
        },
        {
          "command": "operator-collection-sdk.deleteOperator",
          "when": "view == operator-collection-sdk.operators && viewItem == operator",
          "group": "inline"
        },
        {
          "command": "operator-collection-sdk.redeployCollection",
          "when": "view == operator-collection-sdk.operators && viewItem == operator",
          "group": "inline"
        },
        {
          "command": "operator-collection-sdk.redeployOperator",
          "when": "view == operator-collection-sdk.operators && viewItem == operator",
          "group": "inline"
        },
        {
          "command": "operator-collection-sdk.downloadLogs",
          "when": "view == operator-collection-sdk.operators && (viewItem == operator-container || viewItem == operator-init-container)",
          "group": "inline"
        },
        {
          "command": "operator-collection-sdk.downloadVerboseLogs",
          "when": "view == operator-collection-sdk.operators && viewItem == operator-container",
          "group": "inline"
        },
        {
          "command": "operator-collection-sdk.openEditLink",
          "when": "view == operator-collection-sdk.resources && (viewItem == zosendpoint-object || viewItem == suboperatorconfig-object ||  viewItem == operatorcollection-object)",
          "group": "inline"
        },
        {
          "command": "operator-collection-sdk.openAddLink",
          "when": "view == operator-collection-sdk.resources && viewItem == customresources",
          "group": "inline"
        },
        {
          "command": "operator-collection-sdk.openLink",
          "when": "view == operator-collection-sdk.links && viewItem == links",
          "group": "inline"
        },
        {
          "command": "operator-collection-sdk.refresh",
          "when": "view == operator-collection-sdk.operators || view == operator-collection-sdk.resources",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.18.1",
    "http": "^0.0.1-security"
  }
}
